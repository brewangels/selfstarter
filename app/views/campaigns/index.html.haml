%div{:id => "campaigns", :class => "gray_background"}
  %div{:class => "clearfix" }
    - @campaigns.each do |campaign|
      .campaign
        = link_to campaign_path(campaign) do
          %span=campaign.name
          = image_tag(campaign.image)
        .description
          %p.brewery= campaign.brewery.name.upcase
          -#%p= campaign.short_description
          %p.deadline= distance_of_time_in_words_to_now(campaign.deadline) + " left"
